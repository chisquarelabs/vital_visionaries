{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "experimentalDecorators": true,
      "strict": true,                        
      "skipLibCheck": true,                  
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "paths": {
        "*": ["/src/*"] 
      }
    },
    "lib": ["es2015"],
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }